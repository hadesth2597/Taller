@model IEnumerable<Datalayer.users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.us_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.us_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.us_status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.us_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.us_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.us_status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_user }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_user }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_user })
        </td>
    </tr>
}

</table>
